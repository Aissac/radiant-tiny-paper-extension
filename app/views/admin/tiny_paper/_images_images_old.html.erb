<div id="tp_ajax_update" class="clearfix">
  <div class="clearfix">
    <div id="tp_pages">
      <%= will_paginate @assets, :inner_window => 1, :outer_window => 1 %>
    </div>
    <div id="sort_dv">
      <% form_tag({}, {:id => "tp_sort", :method => :get}) do %>
        <%= hidden_field_tag(:sort_by, 'title') %>
        <label for="sort_order">Sort by title:</label>
        <%= select_tag :sort_order, options_for_select([["Ascending", "asc"], ["Descending", "desc"]],list_params[:sort_order]) %>
      <% end -%>
    </div>
  </div>
  <div id="tp_assets_holder">
    <ul id="tp_assets" class="tp_asset_images clearfix">
      <% @assets.each do |asset| %>
        <li>
          <a href="<%= asset.asset.url(list_params[:size].to_sym) %>">
            <span class="tp_asset_image"><%= image_tag(asset.thumbnail(:thumbnail)) %></span>
            <span class="tp_asset_title"><%= truncate(asset.title, 16) %></span>
          </a>
        </li>
      <% end -%>
    </ul>
  </div>
</div>