<div id="tp_ajax_update" class="clearfix">  
  <div class="clearfix">
    <div id="sort_dv">
      <% form_tag({}, {:id => "tp_sort", :method => :get}) do %>
        <%= hidden_field_tag(:sort_by, 'title') %>
        <label for="sort_order">Sort by title:</label>
        <%= select_tag :sort_order, options_for_select([["Ascending", "asc"], ["Descending", "desc"]],list_params[:sort_order]) %>
      <% end -%>
    </div>
    <div id="tp_pages">
      <%= will_paginate @assets, :inner_window => 1, :outer_window => 1 %>
    </div>
  </div>
  <div id="tp_titles_holder">
    <% index = (list_params[:page].to_i - 1) * 24 %>
    <table id="tp_assets">
      <thead>
        <tr><th>No.</th><th>Image title</th><th>Image size</th></tr>
      </thead>
      <tbody>
        <% @assets.each do |asset| %>
          <% index = index + 1 %>
          <tr>
            <td class="index"><%= index %>.</td>
            <td><%= link_to asset.title, asset.asset.url(list_params[:size].to_sym) %></td>
            <td><%= number_to_human_size(asset.asset.size) %></td>
          </tr>
        <% end -%>
      </tbody>
    </table>
  </div>
</div>