<div id="tp_ajax_update" class="clearfix">  
  <div class="clearfix">
    <div id="tp_pages">
      <%= will_paginate @assets, :inner_window => 1, :outer_window => 1 %>
    </div>
  </div>
  <div id="tp_titles_holder">
    <% index = 1 %>
    <table>
      <thead>
        <tr>
          <th>No.</th>
          <th><%= sortable_column_head("File Name", :title) %></th>
          <th><%= sortable_column_head("File Type", :asset_content_type) %></th>
          <th>File size</th>
        </tr>
      </thead>
      <tbody id="tp_assets">
        <% @assets.each do |asset| %>
        <tr>
          <td class="index"><%= index %>.</td>
          <td><%= link_to asset.title, asset.asset.url %></td>
          <td><%= asset.asset_content_type %></td>
          <td><%= asset.asset.size %></td>
        </tr>
        <% index = index + 1 %>
        <% end -%>
      </tbody>
    </table>
  </div>
</div>